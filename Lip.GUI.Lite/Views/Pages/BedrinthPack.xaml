<Page
    x:Class="Lip.GUI.Lite.Views.Pages.BedrinthPack"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lip.GUI.Lite.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdxam="clr-namespace:MdXaml;assembly=MdXaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="BedrinthPack"
    d:DataContext="{d:DesignInstance local:BedrinthPack,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  加载指示器  -->
        <ui:ProgressRing
            x:Name="LoadingIndicator"
            Grid.Row="0"
            Grid.RowSpan="2"
            Width="60"
            Height="60"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsIndeterminate="True"
            Visibility="Visible" />

        <!--  包头部信息  -->
        <ui:Card
            x:Name="PackageHeader"
            Grid.Row="0"
            Margin="0,0,0,16"
            Padding="24"
            Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  包图标  -->
                <Border
                    x:Name="PackageIcon"
                    Grid.Column="0"
                    Width="80"
                    Height="80"
                    Margin="0,0,24,0"
                    Background="{DynamicResource ControlFillColorSecondaryBrush}"
                    CornerRadius="12">
                    <Grid>
                        <Image
                            x:Name="AvatarImage"
                            Stretch="UniformToFill"
                            Visibility="Collapsed" />
                        <ui:SymbolIcon
                            x:Name="DefaultIcon"
                            FontSize="40"
                            Symbol="Box24" />
                    </Grid>
                </Border>

                <!--  包信息  -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock
                        x:Name="PackageName"
                        FontSize="24"
                        FontWeight="Bold" />
                    <TextBlock
                        x:Name="PackageAuthor"
                        Margin="0,4,0,0"
                        FontSize="14"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    <TextBlock
                        x:Name="PackageDescription"
                        Margin="0,8,0,0"
                        FontSize="16"
                        TextWrapping="Wrap" />
                    <StackPanel
                        x:Name="TagsPanel"
                        Margin="0,12,0,0"
                        Orientation="Horizontal"
                        Visibility="Collapsed">
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Tags: " />
                        <TextBlock
                            x:Name="PackageTags"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
                    </StackPanel>
                    <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Hotness: " />
                        <TextBlock
                            x:Name="PackageHotness"
                            FontSize="12"
                            FontWeight="SemiBold" />
                        <TextBlock
                            Margin="16,0,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Updated: " />
                        <TextBlock x:Name="PackageUpdated" FontSize="12" />
                    </StackPanel>
                </StackPanel>

                <!--  安装区域  -->
                <StackPanel
                    Grid.Column="2"
                    MinWidth="200"
                    Margin="24,0,0,0"
                    VerticalAlignment="Center">
                    <ComboBox
                        x:Name="VersionComboBox"
                        Width="180"
                        Margin="0,0,0,12"
                        DisplayMemberPath="VersionNumber" />
                    <ui:Button
                        x:Name="InstallButton"
                        Width="180"
                        Height="40"
                        Click="InstallButton_Click"
                        Content="安装"
                        Icon="{ui:SymbolIcon ArrowDownload20}" />
                    <ui:ProgressRing
                        x:Name="InstallProgress"
                        Width="20"
                        Height="20"
                        Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        IsIndeterminate="True"
                        Visibility="Collapsed" />
                </StackPanel>
            </Grid>
        </ui:Card>

        <!--  包详细信息  -->
        <StackPanel

<ui:FluentWindow
    x:Class="Lip.GUI.Lite.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Lip.GUI.Lite.Helpers"
    xmlns:local="clr-namespace:Lip.GUI.Lite.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Lip.GUI.Lite.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{Binding ViewModel.ApplicationTitle, Mode=OneWay}"
    Width="1100"
    Height="650"
    d:DataContext="{d:DesignInstance local:MainWindow,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <ui:TitleBar
            x:Name="TitleBar"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/wpfui-icon-256.png" />
            </ui:TitleBar.Icon>
            <ui:TitleBar.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Application Title  -->
                    <ui:TextBlock
                        Grid.Column="0"
                        Margin="12,0,12,0"
                        VerticalAlignment="Center"
                        Style="{DynamicResource TitleBarHeaderTextStyle}"
                        Text="{Binding ViewModel.ApplicationTitle}" />

                    <!--  Workspace Switch Button  -->
                    <Button
                        Grid.Column="1"
                        Margin="0,0,8,0"
                        Padding="8,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Command="{Binding ViewModel.OpenWorkspaceFlyoutCommand}">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <ui:SymbolIcon Grid.Column="0" Symbol="Folder16" />
                            <ui:TextBlock
                                Grid.Column="1"
                                Margin="5,0,0,0"
                                Text="{Binding ViewModel.CurrentWorkspaceDisplayName}" />
                        </Grid>
                    </Button>
                    <ui:Flyout
                        x:Name="WorkspaceFlyout"
                        IsOpen="{Binding ViewModel.IsWorkspaceFlyoutOpen, Mode=TwoWay}"
                        Placement="Bottom">
                        <StackPanel MinWidth="220" Margin="8">
                            <TextBlock
                                Margin="4,2,4,2"
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{Binding ViewModel.CurrentWorkspace.Path}"
                                Visibility="{Binding ViewModel.HasCurrentWorkspace, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <ui:Button
                                Margin="0,4,0,0"
                                Padding="4,2"
                                BorderThickness="0"
                                Command="{Binding ViewModel.RemoveWorkspaceCommand}"
                                CommandParameter="{Binding ViewModel.CurrentWorkspace}"
                                Content="Delete current workspace"
                                Visibility="{Binding ViewModel.HasCurrentWorkspace, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <Separator Margin="0,4" Visibility="{Binding ViewModel.HasCurrentWorkspace, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <ui:ListView ItemsSource="{Binding ViewModel.AvailableWorkspaces}">
                                <ui:ListView.ItemTemplate>
                                    <DataTemplate DataType="{x:Type models:Workspace}">
                                        <DockPanel Margin="0,2">
                                            <Button
                                                Margin="4,0,0,0"
                                                Padding="0"
                                                Command="{Binding ViewModel.RemoveWorkspaceCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                DockPanel.Dock="Right">
                                                <ui:SymbolIcon Margin="4" Symbol="Delete16" />
                                            </Button>
                                            <Button
                                                Padding="0"
                                                HorizontalAlignment="Left"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Command="{Binding ViewModel.SwitchWorkspaceCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                                                <StackPanel Margin="0" Orientation="Vertical">
                                                    <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                        Text="{Binding Path}" />
                                                </StackPanel>
                                            </Button>
                                        </DockPanel>
                                    </DataTemplate>
                                </ui:ListView.ItemTemplate>
                            </ui:ListView>
                            <Separator Margin="0,4" Visibility="{Binding ViewModel.HasAvailableWorkspaces, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <Button
                                Padding="4,2"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding ViewModel.NewWorkspaceCommand}"
                                Content="+ New workspace"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" />
                        </StackPanel>
                    </ui:Flyout>
                </Grid>
            </ui:TitleBar.Header>
        </ui:TitleBar>


        <ui:NavigationView
            x:Name="RootNavigation"
            Padding="42,24,42,0"
            FooterMenuItemsSource="{Binding ViewModel.FooterMenuItems, Mode=OneWay}"
            FrameMargin="0"
            IsBackButtonVisible="Visible"
            IsPaneToggleVisible="True"
            MenuItemsSource="{Binding ViewModel.MenuItems, Mode=OneWay}"
            OpenPaneLength="200"
            PaneDisplayMode="Left"
            TitleBar="{Binding ElementName=TitleBar, Mode=OneWay}">
            <!--  BreadcrumbBar="{Binding ElementName=BreadcrumbBar}"  -->
            <!--<ui:NavigationView.Header>
                <ui:BreadcrumbBar x:Name="BreadcrumbBar" Margin="42,32,42,20" />
            </ui:NavigationView.Header>-->
            <ui:NavigationView.ContentOverlay>
                <Grid>
                    <ui:SnackbarPresenter x:Name="SnackbarPresenter" />
                </Grid>
            </ui:NavigationView.ContentOverlay>
        </ui:NavigationView>

        <ContentPresenter x:Name="RootContentDialog" Grid.Row="0" />
    </Grid>
</ui:FluentWindow>

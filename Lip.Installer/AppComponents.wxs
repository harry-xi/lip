<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
    <Fragment>
        <ComponentGroup Id="AppComponents" Directory="INSTALLFOLDER">
            <Component>
                <!--Because wixproj not work with dotnet publish command, but use dotnet build can't generate single file. -->
                <!--So, I have to hard-code binary path instead of add Lip.CLI to dependencies.-->
                <File Source="..\bin\lip.exe"/>
                <File Source="..\bin\lip.pdb"/>
                <File Source="..\bin\Lip.Migration.pdb"/>
                <File Source="..\bin\Lip.Core.pdb"/>
                <File Source="..\bin\Lip.Context.pdb"/>
                <File Source="..\bin\Golang.Org.X.Mod.pdb"/>
                <Environment Id='UpdatePath' Name='PATH' Action='set' Permanent='yes' System='yes' Part='last'
                             Value='[INSTALLFOLDER]'/>
            </Component>
        </ComponentGroup>
    </Fragment>
</Wix>

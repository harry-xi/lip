{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "format_version": {
            "type": "integer",
            "const": 3
        },
        "format_uuid": {
            "type": "string",
            "const": "289f771f-2c9a-4d73-9f3f-8492495a924d"
        },
        "tooth": {
            "type": "string"
        },
        "version": {
            "type": "string",
            "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
        },
        "info": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^[a-z0-9-]+(:[a-z0-9-]+)?$"
                    }
                },
                "avatar_url": {
                    "type": "string"
                }
            }
        },
        "variants": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "label": {
                        "type": "string",
                        "pattern": "^[a-z0-9]+(_[a-z0-9]+)*$"
                    },
                    "platform": {
                        "type": "string"
                    },
                    "dependencies": {
                        "type": "object",
                        "patternProperties": {
                            "^.*$": {
                                "type": "string"
                            }
                        }
                    },
                    "assets": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string",
                                    "enum": [
                                        "self",
                                        "tar",
                                        "tgz",
                                        "uncompressed",
                                        "zip"
                                    ]
                                },
                                "urls": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "placements": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "type": {
                                                "type": "string",
                                                "enum": [
                                                    "file",
                                                    "dir"
                                                ]
                                            },
                                            "src": {
                                                "type": "string"
                                            },
                                            "dest": {
                                                "type": "string"
                                            }
                                        },
                                        "required": [
                                            "type",
                                            "src",
                                            "dest"
                                        ]
                                    }
                                }
                            },
                            "required": [
                                "type"
                            ]
                        }
                    },
                    "preserve_files": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "remove_files": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "scripts": {
                        "type": "object",
                        "properties": {
                            "pre_install": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "install": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "post_install": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "pre_pack": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "post_pack": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "pre_uninstall": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "uninstall": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "post_uninstall": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        },
                        "patternProperties": {
                            "^[a-z0-9]+(_[a-z0-9]+)*$": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "required": [
        "format_version",
        "format_uuid",
        "tooth",
        "version"
    ]
}

<ui:ContentDialog
    x:Class="Lip.GUI.Lite.Controls.NewWorkSpaceDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lip.GUI.Lite.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:windows="clr-namespace:Lip.GUI.Lite.ViewModels.Windows"
    Title="New Workspace"
    d:DataContext="{d:DesignInstance Type=windows:MainWindowViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    PrimaryButtonText="OK"
    mc:Ignorable="d">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:NewWorkSpaceDialog}" />
    </ui:ContentDialog.Resources>
    <StackPanel Margin="4">
        <TextBlock Margin="0,0,0,4" Text="Workspace Name" />
        <TextBox x:Name="NameBox" Margin="0,0,0,12" />
        <TextBlock Margin="0,0,0,4" Text="Path" />
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="PathBox" Width="300" />
            <Button
                Margin="8,0,0,0"
                Click="BrowseButton_Click"
                Content="Browse..." />
        </StackPanel>
        <TextBlock
            x:Name="ErrorText"
            Margin="0,8,0,0"
            Foreground="Red"
            Visibility="Collapsed" />
    </StackPanel>
</ui:ContentDialog>
